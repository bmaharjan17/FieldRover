<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comments to <%= ground.name %></h1>
            <div style="width: 30%; margin: 40px auto;">
                <form action="/grounds/<%= ground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="COMMENT TEXT..">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </form> 
                <a href="/grounds">Go Back</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>