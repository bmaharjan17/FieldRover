<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=ground.name %></h1>
            <div style="width: 30%; margin: 40px auto;">
                <form action="/grounds/<%= ground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="ground[name]" value="<%= ground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="ground[price]" value="<% ground.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="ground[image]" value="<%= ground.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="ground[description]" value="<%= ground.description %>">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="location" id="location" value="<%= ground.location %>">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                    </div>
                </form> 
                <a href="/grounds">Go Back</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>